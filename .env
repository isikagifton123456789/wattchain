# AI Energy Trading System - Environment Configuration
# Copy this file to .env and add your actual API keys

# Weather API Configuration
# Using Open-Meteo (free, no API key required)
# Documentation: https://open-meteo.com/

# Google Gemini AI Configuration  
# Get your API key from: https://ai.google.dev/
GEMINI_API_KEY=secret

# M-Pesa Integration (Daraja API)
# Register at: https://developer.safaricom.co.ke/
# Sandbox credentials (for testing)
MPESA_CONSUMER_KEY=secret
MPESA_CONSUMER_SECRET=secret
MPESA_ENVIRONMENT=sandbox
MPESA_BUSINESS_SHORTCODE=174379
MPESA_PASSKEY=secret
# Production credentials (replace with your actual values)
# MPESA_CONSUMER_KEY=your_production_consumer_key
# MPESA_CONSUMER_SECRET=your_production_consumer_secret
# MPESA_ENVIRONMENT=production
# MPESA_BUSINESS_SHORTCODE=your_shortcode
# MPESA_PASSKEY=your_production_passkey

# Database Configuration
DATABASE_PATH=energy_trading.db

# Payment Callback URL (for local testing)
PAYMENT_CALLBACK_URL=http://localhost:5000/api/payment/callback

# API Server Configuration
API_HOST=0.0.0.0
API_PORT=5000
DEBUG_MODE=False

# Logging Configuration
LOG_LEVEL=INFO
# Local Callback URL for development
PAYMENT_CALLBACK_URL=http://localhost:5000/api/payment/callback
